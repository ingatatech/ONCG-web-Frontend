{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/components/*": ["./components/*"],
			"@/utils/*": ["./utils/*"],
			"@/data/*": ["./data/*"],
			"@/lib/*": ["./lib/*"],
			"@/*": ["./src/*"]
		},
		"target": "ES2017"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/layout.tsx", "**/*.js", "**/*.jsx"],
	"exclude": ["node_modules"]
}
